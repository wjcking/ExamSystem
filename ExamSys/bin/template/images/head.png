function GetMultipleSelected(keyMultiName, currentInput) {

    var temp = "";

    for (var i = 0; i < document.getElementsByName(keyMultiName).length; i++) {

        if (document.getElementsByName(keyMultiName).item(i).checked) {
            var current = document.getElementsByName(keyMultiName).item(i).value;

            temp += current;
        }
    }
	document.getElementById("userAnswerID" + currentInput).setAttribute("innerText", temp); 
}

function GetSelectedKey(keyName, currentInput, isMulti) {
	//选项声音
	window.external.Play('playoption');
			 
    if (isMulti == "False")
        GetSingleSelected(keyName, currentInput);
    else
        GetMultipleSelected(keyName, currentInput);
}


function GetUserJudgeAnswer(currentInputName, userAnswerID) {
	//选项声音
	window.external.Play('playoption');

    var userJudgeAnswers = document.getElementsByName(currentInputName);

    for (var cj = 0; cj < userJudgeAnswers.length; cj++) {

        if (userJudgeAnswers.item(cj).checked)
			document.getElementById(userAnswerID).innerText = userJudgeAnswers.item(cj).value;
    }
}